<%= simple_form_for(resource, html: { class: 'login-form' }, as: resource_name, url: registration_path(resource_name)) do |f| %>
 
  <div class="text-center">
    <%= f.error_notification %>
    <%= render "devise/shared/error_messages" %>
  </div>

  <div class="form-inputs">
    <%= f.input :name,
                required: true,
                autofocus: true,
                label: false, #tira nome "email",
                placeholder: 'Nome'%>
    <%= f.input :phone,
                input_html: { class: "mask-phone" },
                required: true,
                autofocus: true,
                label: false, #tira nome "email",
                placeholder: 'Telefone'%>
                
    <%= f.input :email,
                required: true,
                autofocus: true,
                label: false, #tira nome "email",
                placeholder: 'E-mail',
                input_html: { autocomplete: "email" }%>
    <%= f.input :password,
                required: true,
                label: false, #tira nome "email",
                placeholder: 'senha no mínimo 6 caracteres',
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                required: true,
                label: false, #tira nome "email",
                placeholder: 'Confirmar senha',
                input_html: { autocomplete: "new-password" } %>
  </div>

  <%= render "devise/shared/button_submit", f: f, text: 'Cadastrar' %>
<% end %>

<div class="form-group d-md-flex">
   
    <div class="w-100 text-md-right">
      <%= render "devise/shared/links" %>

      <%# render para renderizar partes de um HTML dentro de uma TELA, para reutilizar em varios locais%>
      <%# arquivo que tiver '_' igual no views/shared todo arquivo que for de template que tiver "_", ele é um arquivo que posso usar "render", para renderizar como partes de um HTML%>
      <%# posso reutilizar em outras partes do codigo e não deixar ele fixo aqui, SEPARA EM UMA VIEW, com "_" para ele se comportar como "passion" e ai pode reutilizar com "render"%>
    </div>
  </div>