<%= simple_form_for([:admin, @product]) do |f| %> <%# esse ':admin' com [] diz que ele é do namespace admin, assim 'admin_products' %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :image %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :publish %>
    <%= f.input :promo %>
    <%= f.input :promo_price %>
    <%= f.association :category, include_blank: false %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Salvar', class: 'btn btn-info' %>
    <%# Normalmente por contexto o 'simple_form_for' já sabe qual é a função do botão aqui ele sabe que é um CREATE, mas tem como trocar igual vamos colocar 'Salvar'%>
  </div>
<% end %>
